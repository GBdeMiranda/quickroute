{
    "name": "QuickRoute",
    "description": "Chrome extension for URL template shortcuts",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "src/html/popup.html",
      "default_icon": "icons/icon48.png"
    },
    "permissions": ["storage", "contextMenus", "activeTab"],
    "background": {
      "service_worker": "src/js/background.js"
    },
    "options_page": "src/html/options.html",
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "commands": {
      "open_template_1": {
        "suggested_key": {
          "default": "Ctrl+Shift+1",
          "mac": "Command+Shift+1"
        },
        "description": "Use Template 1"
      },
      "open_template_2": {
        "suggested_key": {
          "default": "Ctrl+Shift+2",
          "mac": "Command+Shift+2"
        },
        "description": "Use Template 2"
      },
      "open_template_3": {
        "suggested_key": {
          "default": "Ctrl+Shift+3",
          "mac": "Command+Shift+3"
        },
        "description": "Use Template 3"
      },
      "open_template_4": {
        "suggested_key": {
          "default": "Ctrl+Shift+4",
          "mac": "Command+Shift+4"
        },
        "description": "Use Template 4"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "homepage_url": "https://github.com/GBdeMiranda/quickroute",
    "update_url": "https://github.com/GBdeMiranda/quickroute",
    "short_name": "QuickRoute"
}
